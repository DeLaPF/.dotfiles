# NOTE: Add the following to the global `.gitconfig` (`~/.gitconfig`)
# [include]
#     path = ~/.add_gitconfig

[alias]
    cstash = "!git add -A && git commit --no-verify -m \"CSTASH-ED ('git cpop' to un-stash)\""
    cpop = reset HEAD~1
    cundo = reset @{1}
    st = status -s
    aa = add -A
    ll = log -1
