# Basic
alias ll="ls -lA"
alias refr="refresh"
function refresh() {
    source ~/.zshrc
}

# Tmux
alias tm="tmux"
alias tml="tmux ls"
alias tma="tmux attach"
alias tmat="tmux attach -t"

# NeoVim
alias vim="nvim"
# Open with Custom Commands
alias ff="nvim +TelescopeFindFile"
alias fp="nvim +TelescopeFindPattern"

# Docker
alias dps="docker ps"
alias dlf="docker logs -f"

# Kubernetes
alias kcl="kubectl"
alias kcx="kubectx"
alias kns="kubens"
alias kgp="kubectl get pods"
alias kgs="kubectl get services"
alias kgd="kubectl get deployments"
alias klf="kubectl logs -f"
